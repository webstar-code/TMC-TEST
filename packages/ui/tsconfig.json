{
	"extends": "tsconfig/react-library.json",
	"compilerOptions": {
		"strict": true,
		"plugins": [
			{
				"name": "next"
			}
		],
		"baseUrl": ".",
		"lib": [
			"DOM"
		],
		"paths": {
			"@/*": [
				"src/*"
			],
			"react": [
				"./node_modules/@types/react"
			]
		}
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts",
		"tailwind.config.ts"
	],
	"exclude": [
		"node_modules"
	]
}