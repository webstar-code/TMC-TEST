{
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "user": "turbo run dev --filter ui --filter user",
    "admin": "turbo run dev --filter ui --filter admin",
    "start": "turbo start",
    "start:local": "turbo start:local",
    "lint": "turbo lint",
    "clean": "turbo clean",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "docs": "yarn workspace docs",
    "web": "yarn workspace web",
    "eslint": "yarn workspace eslint-config-custom",
    "tailwind": "yarn workspace tailwind-config",
    "tsconfig": "yarn workspace tsconfig",
    "ui": "yarn workspace ui",
    "ui:add": "yarn workspace ui ui:add",
    "precommit": "lint-staged"
  },
  "devDependencies": {
    "eslint": "^8.53.0",
    "eslint-config-custom": "*",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.0.3",
    "prettier-plugin-tailwindcss": "^0.5.7",
    "tsconfig": "*",
    "turbo": "^1.10.16"
  },
  "lint-staged": {
    "(apps|packages)/**/*.{js,ts,jsx,tsx}": [
      "yarn run format",
      "eslint --fix"
    ],
    "*.json": [
      "yarn run format"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run precommit"
    }
  },
  "engines": {
    "npm": "please-use-yarn",
    "yarn": ">= 1.17.3",
    "node": ">= 12.5.0"
  },
  "packageManager": "yarn@1.22.19"
}
