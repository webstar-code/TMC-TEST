{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "env": [
        "SENDGRID_KEY",
        "NEXT_PUBLIC_LOCIZE_PROJECT_ID",
        "NEXT_PUBLIC_LOCIZE_API_KEY",
        "NODE_ENV",
        "STRIPE_TEST_KEY"
      ],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"],
      "dotEnv": [
        ".env.production.local",
        ".env.local",
        ".env.production",
        ".env"
      ]
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "check-types": {},
    "dev": {
      "cache": false,
      "persistent": true,
      "dotEnv": [
        ".env.development.local",
        ".env.local",
        ".env.development",
        ".env"
      ]
    },
    "start": {},
    "start:local": {},
    "clean": {
      "cache": false
    }
  }
}
